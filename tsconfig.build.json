{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2018",
      "dom"
    ],

    "paths": {
      "*": [ "node_modules/@types/*", "*"]
    }
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
